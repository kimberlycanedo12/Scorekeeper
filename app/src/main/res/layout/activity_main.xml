<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.hyperdev.scorekeeper.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="350dp"
        android:layout_height="255dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment2_container"
        android:layout_width="350dp"
        android:layout_height="255dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fragment_container"
        android:layout_alignStart="@+id/fragment_container"></RelativeLayout>

</RelativeLayout>